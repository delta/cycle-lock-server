<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Usage Details</title>
    <style type="text/css">
        .filter{
            margin-bottom: 2%;
        }
        .RollNo{
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>NITT CYCLE APP DATABASE</h1>
        <div style="display: flex;justify-content: flex-end;">
            <a href="/">Return back</a>
        </div>
        <nav class="nav nav-tabs">
            <a class="nav-link" href="/fetch/cycle">Cycle</a>
            <a class="nav-link" href="/fetch/dock">Dock</a>
            <a class="nav-link" href="/fetch/stand">Stand</a>
            <a class="nav-link active" aria-current="page" href="/usage/history">Usage</a>
        </nav>
        <div style="padding-top: 2%;">
            <p class="d-flex justify-content-end">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filter" aria-expanded="false" aria-controls="Filter">
                    Filter
                </button>
            </p>
            <div class="collapse" id="filter">
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group" style="float: right;">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnradio1">Cycle Id</label>
                  
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="btnradio2">Roll No</label>
                  </div>
                <div class="d-flex justify-content-center">
                    <div class="col-12" id="Id" style="width: 50%;display: none;">
                        <input type="text" name="Id" class="form-control" id="inlineFormInputGroupFilter" placeholder="Cycle Id">
                    </div>
                    <div class="col-12" id="RollNo" style="width: 50%;">
                        <input type="tel" name="UserRollNo" class="form-control" id="inlineFormInputGroupFilter1" placeholder="Roll No" maxlength="9" minlength="9">
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                  <tr>
                    <th scope="col">Cycle Id</th>
                    <th scope="col">User Roll No</th>
                    <th scope="col">Start Dock</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Dock</th>
                    <th scope="col">End Time</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (usage) { usage.forEach(dock => {%>
                        <tr>
                            <td class="text-center text-break" scope="row"><%=dock.CycleId%></td>
                            <td class="text-center text-break" ><%=dock.UserRollNo%></td>
                            <td class="text-center text-break" ><%=dock.StartDock%></td>
                            <td class="text-center text-break" ><%=JSON.stringify(dock.StartTime).substring(1,23)%></td>
                            <td class="text-center text-break"><%=dock.EndDock%></td>
                            <td class="text-center text-break"><%=JSON.stringify(dock.EndTime).substring(1,23)%></td>
                        </tr>
                    <% }); } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> 
    <script src="/js/usagefilter.js"></script>
</body>
</html>